<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">


      <div class="wrapper">
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar %>
        <%end %>
      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= @user.username %></h2>
        <% if @user.id == current_user.id %>
        <a class="edit-profile" href="<%= edit_user_path(@user) %>">
          <button>Edit Profile</button>
        </a>
        <% else %>
          <%= link_to 'Follow' , user_relationships_path(@user), method: :post , class: 'btn btn-danger'%>
          <%= link_to 'Unfollow', relationship_path(@rel.id),method: :delete,  class: 'btn btn-danger'%>
        <%end %>

      </div>
      <ul class="posts">
        <li><span><%= @posts.count %></span> posts</li>
        <li><span> <%= @user.followers.count %>  </span>followers</li>
        <li><span> <%= @user.following.count %> </span> following</li>
      </ul>
      <h2 class="name"><%= @user.name %></h2>
      <%=link_to @user.website, @user.website, class:  'website' %>
      <div class="user-tabs">
        <a class="tab active" href="">
          <i class="fa fa-th"></i>
          POSTS
        </a>
        <a class="tab" href="">
          <i class="fa fa-tv"></i>
          IGTV
        </a>
        <a class="tab" href="">
          <i class="fa fa-bookmark"></i>
          SAVED
        </a>
        <a class="tab" href="">
          <i class="fa fa-tag"></i>
          TAGGED
        </a>
      </div>
    </div>
  </div>
  <div class="user-images">
    <% @posts.each do |post|%>
      <div class="wrapper">
        <%=link_to post_path(post) do %>
          <%=image_tag post.image %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>